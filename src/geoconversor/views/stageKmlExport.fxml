<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import java.net.*?>

<GridPane 
    id="AnchorPane" 
    prefHeight="300.0" 
    prefWidth="350.0" 
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="geoconversor.controller.StageKmlController">
    
    <stylesheets>
        <URL value="@AppStyleSheet.css" />
    </stylesheets> 
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="0" 
        text="Location">
    </Label>
    <TextField 
        GridPane.columnIndex="1"
        GridPane.rowIndex="0"
        fx:id="tfFilename"
        editable="false" >    
    </TextField>
    <Button 
        GridPane.columnIndex="2"
        GridPane.rowIndex="0"
        fx:id="bFilename"
        onAction="#setFilename" 
        text="Change"
    >
    </Button>
    
    <Label 
        GridPane.columnIndex="0"
        GridPane.rowIndex="1"  
        text="Layer type">
    </Label>
    <HBox 
        GridPane.columnIndex="1"
        GridPane.columnSpan="2" 
        GridPane.rowIndex="1"
    >
        <ChoiceBox value="Points">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Points"/>
                    <String fx:value="Line"/>
                    <String fx:value="Polygon"/>
                </FXCollections>
            </items>
        </ChoiceBox>
    </HBox>
    
    <ButtonBar 
        GridPane.columnIndex="0"
        GridPane.columnSpan="3" 
        GridPane.rowIndex="2">
        <buttons>
            <Button 
                fx:id="bExport"
                text="Save"
                onAction="#exportKml" >
            </Button> 
            <Button 
                fx:id="bClose"
                text="Close"
                onAction="#closeStage" >
            </Button>
        </buttons>
    </ButtonBar>
    
</GridPane>
