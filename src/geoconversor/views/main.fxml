<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane
    xmlns:fx="http://javafx.com/fxml/1"
    id="grid"
    prefHeight="500.0"
    prefWidth="800"
    fx:controller="geoconversor.controller.AppController"
>
    <stylesheets>
        <URL value="@AppStyleSheet.css" />
    </stylesheets>       
    
    <columnConstraints>
        <ColumnConstraints percentWidth="50"></ColumnConstraints> 
        <ColumnConstraints percentWidth="50"></ColumnConstraints>        
    </columnConstraints>
    
    <MenuBar 
        GridPane.columnIndex="0"
        GridPane.rowIndex="0"
        GridPane.columnSpan="2"   
        fx:id="menuBar"
    >
        <menus>
            <Menu text="File">
                <items>               
                    <MenuItem id="menuExit" text="Exit" />                                     
                </items>
            </Menu>
            <Menu text="Convert">
                <items>
                    <MenuItem 
                        text="Coordinates"
                        onAction="#openConvertStage">                        
                    </MenuItem>
                </items>                              
            </Menu>
        </menus>
    </MenuBar>
     
           
    <fx:include 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="1"
        source="list.fxml"/>
    <fx:include 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="2"
        source="buttons.fxml"/> 
    
    <ScrollPane 
        GridPane.columnIndex="1" 
        GridPane.rowIndex="1"
        GridPane.rowSpan="3"> 
        
        <content >            
            <fx:include source="properties.fxml"/>
        </content>

    </ScrollPane>          
    
</GridPane>